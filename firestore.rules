rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User root document (contains activeQuestId)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Quests sub-collection
    match /users/{userId}/quests/{questId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Learning data: Only the owner can read/write their notes
    match /learning/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}